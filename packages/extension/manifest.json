{
  "manifest_version": 3,
  "name": "Anor",
  "version": "0.1.0",
  "description": "Privacy-first personal assistant",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://web.whatsapp.com/*",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Anor"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://localhost:3000/*"
      // NOTE: For production, add your web app URL here, e.g.:
      // "https://your-domain.com/*"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/messaging/*"],
      "js": ["content-interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.linkedin.com/messaging/*"],
      "js": ["content-linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content-whatsapp.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://localhost:3000/*"
        // NOTE: For production, add your web app URL here, e.g.:
        // "https://your-domain.com/*"
      ],
      "js": ["content-webapp.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}

